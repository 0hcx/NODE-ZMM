<div class="admin-wrapper">
  <header class="title">
    创建慕课
  </header>
  <!-- Main content -->
  <section class="content">
        <div class="box">
          <form id="defaultForm" action="">
            <div class="box-body pad">
                <div class="form">
                    <label>慕课名称</label>
                    <input type="text" class="form-control" id="moocName" placeholder="慕课名称" required>
                </div>
                <div class="form">
                    <label>教师名称</label>
                    <input type="text" class="form-control" id="teacher" placeholder="教师名称" required>
                </div>
                <div class="form">
                    <label>学期周数</label>
                    <input type="number" class="form-control" id="weekCount" placeholder="学期周数" required>
                </div>
                <div class="form">
                    <label>每周课时</label>
                    <input type="number" class="form-control" id="classHour" placeholder="每周课时" required>
                </div>
                <div class="form-thumb">
                    <img  class="img-thumbnail" id="moocThumb">
                </div>
            </div>
              <div class="form has-feedback">
                  <div class="box-footer">
                      <input type="file" id="uploadFile" multiple="multiple"  accept="image/*">
                      <a class="btn btn-primary"><i class="fa fa-camera fa-fw"></i> 选择文件</a>
                      <a class="btn btn-primary disabled" id="UploadBtn"><i class="fa fa-upload fa-fw"></i> 上传</a>
                      <button type="submit" class="btn btn-primary pull-right" id="addMoocBtn">发布慕课</button>
                  </div>
              </div>
          </form>
        </div>

          </form>
      <!-- /.col-->
    <!-- ./row -->
  </section>
</div>
<div class="pg-wrapper">
  <div class="pg-layer">
    <div class="pg-bar"></div>
    <span class="pg-info">0%</span>
  </div>
</div>
