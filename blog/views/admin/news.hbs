<div class="admin-wrapper">
        <header class="title">
            发布新闻
        </header>
        <!-- Main content -->
        <section class="content">
            <div class="box">
                <form id="defaultForm" action="">
                    <div class="box-body pad">
                        <div class="form-group">
                            <input type="text" class="form-control" id="newsTitle" placeholder="文章标题" required>
                        </div>

                        <div class="form-group">
                            <textarea id="newsContent" placeholder="文章内容" style="" required></textarea>
                        </div>
                    </div>
                    <div class="form has-feedback">
                        <div class="box-footer">
                            <input type="file" id="uploadFile" multiple="multiple"  accept="image/*">
                            <a class="btn btn-primary"><i class="fa fa-camera fa-fw"></i> 选择文件</a>
                            <a class="btn btn-primary disabled" id="UploadBtn"><i class="fa fa-upload fa-fw"></i> 上传</a>
                            <button type="submit" class="btn btn-primary pull-right" id="addNewsBtn">发布新闻</button>
                        </div>
                    </div>
                </form>
            </div>
            <!-- /.col-->
            <!-- ./row -->
        </section>
</div>
<div class="pg-wrapper">
    <div class="pg-layer">
        <div class="pg-bar"></div>
        <span class="pg-info">0%</span>
    </div>
</div>
