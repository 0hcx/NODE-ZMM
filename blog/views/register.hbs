<div class="login-box">
    <div class="login-logo">
        <h1>Mia's Blog</h1>
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body">
        <form id="registerform" action="">
        <p class="register-box-msg "></p>
        <div class="form-group has-feedback">
            <input type="email" class="form-control" placeholder="E-mail" id="new-email" name="email" required>
            <span class="glyphicon form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            <input type="text" class="form-control" placeholder="用户名" id="new-usr" required  minlength="3">
            <span class="glyphicon  form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            <input type="password" class="form-control" placeholder="密码" id="new-pwd" required minlength="3" maxlength="10">
            <span class="glyphicon  form-control-feedback"></span></div>
        <div class="form-group has-feedback">
            <input type="text" class="form-control" placeholder="住所" id="new-address">
            <span class="glyphicon  form-control-feedback"></span>
        </div>
        <div class="row">
            <div class="col-xs-8">
            </div>
            <div class="col-xs-12">
                <button type="submit" class="form-control" id="registerBtn">注册</button>
            </div>
        </div>
      </form>
    </div>
</div>

<script src="/blog/common.js"></script>
<script src="blog/register.js"></script>